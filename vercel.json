{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist/public"
      } 
    }
  ],
  "routes": [
    { 
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff2?|ttf|eot)", 
      "dest": "/$1.$2",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    { 
      "src": "/.*", 
      "dest": "/index.html" 
    }
  ]
}