/auth/callback   /index.html   200

# When on /auth/*, requests for assets and helper files must resolve from the root
/auth/assets/*           /assets/:splat        200
/auth/kill-sw.js         /kill-sw.js           200
/auth/registerSW.js      /registerSW.js        200

